@model ListModel<Car>

@{
    ViewData["Title"] = "Cars";

    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();

    var categories = ViewData["caregories"] as List<Category>;
    var currentCategory = ViewData["currentCategory"] as Category;

    int prev = Model.CurrentPage == 1 ? 1 : Model.CurrentPage - 1;
    int next = Model.CurrentPage == Model.TotalPages ? Model.TotalPages : Model.CurrentPage + 1;
}

<h1>Автомобили</h1>


<div class="row">

    <!-- Выбор категории -->
    <h2>Категории автомобилей</h2>
    <div class="col-2">
        <ul class="nav ">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-bs-toggle="dropdown"
                   href="#"
                   role="button"
                   aria-expanded="false">
                    <b>@(currentCategory?.Name ?? "Все")</b>
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Car"
                           asp-route-category=@null><b>Все</b></a>
                    </li>
                    @foreach (var item in categories!)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Car"
                               asp-route-category="@item.NormalizedName">
                               @item.Name
                            </a>
                        </li>
                    }
                </ul>
            </li>
        </ul>
    </div>
    <!-- Выбор категории - конец -->

    <!-- Вывод карточек -->
    <div class="col-10 row">
        @foreach (var car in Model.Items)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@car.Image" width="100" height="250" class="card-img-top" alt="@car.Name">
                    <div class="card-body">
                        <h5 class="card-title">Марка: @car.Name</h5>
                        <div class="card-text">Цена: @car.Price</div>
                        <p class="card-text"> Описание: @car.Description</p>
                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@car.Id" asp-route-returnurl="@returnUrl"
                           class="btn btn-primary">Добавить в корзину</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Вывод карточек - конец -->

    <!-- Пагинация -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-controller="Car" asp-action="Index"
                       asp-route-category="@(currentCategory?.NormalizedName)"
                       asp-route-pageNo="@prev">Назад</a>
                </li>


                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link"
                           asp-controller="Car" asp-action="Index"
                           asp-route-category="@(currentCategory?.NormalizedName)"
                           asp-route-pageNo="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-controller="Car" asp-action="Index"
                       asp-route-category="@(currentCategory?.NormalizedName)"
                       asp-route-pageNo="@next">Вперед</a>
                </li>
            </ul>
        </nav>
    }
    <!-- Пагинация - конец -->

</div>

